<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanjeev.projectf.OnTouchReminderNotificationActivity"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Task"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/doneButton"
        android:layout_toStartOf="@+id/doneButton"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Description"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/Task"
        android:layout_alignLeft="@+id/Task"
        android:layout_alignStart="@+id/Task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Location"
        android:layout_marginTop="62dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/Description"
        android:layout_alignLeft="@+id/Description"
        android:layout_alignStart="@+id/Description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOT IT!"
        android:id="@+id/doneButton"
        android:textColor="#FFFFFF"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/Location"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TASK"
        android:id="@+id/textView4"
        android:layout_above="@+id/Description"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DESCRIPTION"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LOCATION"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAVIGATE TO LOCATION"
        android:id="@+id/navigate_btn"
        android:layout_alignBottom="@+id/doneButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
