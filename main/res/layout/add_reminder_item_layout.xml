<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanjeev.projectf.AddReminderActivity"
    android:minHeight="2dp"
    android:background="@drawable/background">


    <TextView
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TASK"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/taskbox_1"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/taskbox_1" />

    <TextView
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DESCPITION"
        android:id="@+id/textView2"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_toStartOf="@+id/addtask_2"
        android:layout_toLeftOf="@+id/addtask_2" />

    <Button
        android:textSize="19dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET LOCATION"
        android:id="@+id/mapbutton"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/descriptionbox_1"
        android:layout_alignRight="@+id/descriptionbox_1"
        android:layout_alignEnd="@+id/descriptionbox_1" />

    <Button
        android:textSize="19dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TASK"
        android:id="@+id/addtask_2"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskbox_1"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/descriptionbox_1"
        android:layout_alignStart="@+id/descriptionbox_1"
        android:hint="Enter Task Name here" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionbox_1"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/addtask_2"
        android:layout_alignStart="@+id/addtask_2"
        android:inputType="textMultiLine"
        android:hint="Enter Task Detiils" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_above="@+id/addtask_2"
        android:layout_marginBottom="63dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/descriptionbox_1"
        android:layout_toEndOf="@+id/descriptionbox_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LOCATION"
        android:id="@+id/textView3"
        android:layout_marginTop="73dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/mapbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Map_Location_Name"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/descriptionbox_1"
        android:layout_alignEnd="@+id/descriptionbox_1"
        android:layout_alignLeft="@+id/descriptionbox_1"
        android:layout_alignStart="@+id/descriptionbox_1"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Map_Location_Address"
        android:layout_below="@+id/Map_Location_Name"
        android:layout_alignLeft="@+id/Map_Location_Name"
        android:layout_alignStart="@+id/Map_Location_Name"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/Map_Location_Name"
        android:layout_alignEnd="@+id/Map_Location_Name" />

</RelativeLayout>
